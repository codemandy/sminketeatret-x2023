---
const { post } = Astro.props;
import { formatDate } from "../utils/helpers";
---

<a class="post-preview__link fade-in" href={post.url}>
  <article class="post-preview__article">
    <picture>
      <source srcset={`${post.frontmatter.image}`} type="image" />
      <img
        class="post-preview__img"
        src={`${post.frontmatter.image}`}
        alt={`Featured image for ${post.frontmatter.title}`}
      />
    </picture>
    <div class="post-preview__text">
      {
        post.frontmatter?.category && (
          <p class="post-preview__category">{post.frontmatter.category}</p>
        )
      }
      <h2>{post.frontmatter.title}</h2>
    </div>
  </article>
</a>

<style>
  .post-preview__link {
    text-decoration: none;
  }
  .post-preview__link:hover .post-preview__article {
    box-shadow: rgba(0, 0, 0, 0.1) 0 10px 20px 0;
    transform: scale(1.1);
  }
  .post-preview__article {
    display: grid;
    grid-template-columns: 1fr;
    align-items: center;
    background-color: var(--theme-surface-1);
    border-radius: 0 0 0.5rem 0.5rem;
    transition: box-shadow 0.2s ease-in-out, transform 0.2s ease-in-out; /* Added */
  }

  .post-preview__text {
    transition: transform 0.2s ease-in-out;
    margin-left: 1rem;
  }
  .post-preview__category {
    width: fit-content;
    padding: 0.1rem 0rem;
    margin-bottom: 0.1rem;
    font-size: var(--step--3);
    color: var(--theme-primary-cat);
    font-weight: 600;
  }
  .post-preview__text h2 {
    font-size: var(--step--2);
  }
  .post-preview__img {
    width: 300px;
    height: 100px;
    object-fit: cover;
    border-radius: 0.5rem 0.5rem 0 0;
    transition: box-shadow 0.2s ease-in-out, transform 0.2s ease-in-out;
  }
  .post-preview__date {
    font-size: var(--step--1);
    color: #666;
  }
  @media (min-width: 768px) {
    .post-preview__article {
      grid-template-columns: 1fr;
    }
    .post-preview__img {
      aspect-ratio: 16/9;
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
    .post-preview__text {
      margin: 1rem 0 0.5rem 0.2rem;
    }
  }
</style>
